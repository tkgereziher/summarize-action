{
  "manifest_version": 3,
  "name": "Summarize & Action (MVP)",
  "version": "0.1.0",
  "description": "Highlight text and get TL;DR + actions",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}